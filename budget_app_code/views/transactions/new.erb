<link rel="stylesheet" type="text/css" href="/styles/banner.css">
<link rel="stylesheet" type="text/css" href="/styles/button.css">
<link rel="stylesheet" type="text/css" href="/styles/text.css">

<div class="banner">
  <h1>New Transaction</h1>
</div>
<br></br>

<div class="wrapper">
  <form method="post" action="/transactions">

    <label for="transaction_name">New Transaction Amount (Â£):</label>
      <input id="transaction-amount" type="text" name="transaction_amount" />
    <br></br>

    <label for="merchant_id">New Transaction Merchant Name:</label>
    <select class="buttons" name="merchant_id">
      <% for merchant in @merchants %>
        <option value="<%= merchant.id %>"><%= merchant.merchant_name %></option>
      <% end %>
    </select>

    <br></br>

    <label for="tag_id">New Transaction Tag Name:</label>
      <select class="buttons" name="tag_id">
        <% for tag in @tags %>
          <option value="<%= tag.id %>"><%= tag.tag_name %></option>
        <% end %>
      </select>
    <br></br>

   <label for="essential">New Transaction Essential? :</label>
      <select class="buttons" name="essential">
        <option value="Yes">Yes</option>
        <option value="No">No</option>
      </select>
    <br></br>

      <!-- <input id="essential" type="select" name="essential" /> -->


    <label for="time_added">Time of Transaction :</label>
    <input type="date" name="time_added" value="">
    <!-- <input type="hidden" name="" value=""> -->
    <br></br>
    <input type='submit' value="Add New Transaction" class="buttons"/>
  </form>
</div>
